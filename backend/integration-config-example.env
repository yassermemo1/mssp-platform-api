# Integration Framework Configuration
INTEGRATION_TIMEOUT=30000
INTEGRATION_MAX_RETRIES=3
INTEGRATION_RETRY_DELAY=1000
INTEGRATION_ENABLE_LOGGING=true

# Jira Integration Configuration
JIRA_ENABLED=true
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-jira-email@company.com
JIRA_PASSWORD=your-jira-api-token
# Or use Bearer token instead:
# JIRA_BEARER_TOKEN=your-bearer-token

# Custom field mappings for Jira
# Note: customfield_10050 should be configured in Jira to store client IDs
# customfield_10030 = Time to First Response (SLA)
# customfield_10031 = Time to Resolution (SLA)
# JIRA_CUSTOM_HEADERS={"X-Atlassian-Token": "no-check"}

# Sample API Integration (for demo)
SAMPLE_ENABLED=true
SAMPLE_BASE_URL=https://jsonplaceholder.typicode.com 